# MongoDB
# IMPORTANT: You can use shared MongoDB instance - collections are prefixed with "savagesquad_"
# Example: mongodb+srv://user:pass@cluster.mongodb.net/your-shared-db
# Or use dedicated database: mongodb+srv://user:pass@cluster.mongodb.net/savagesquad
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/savagesquad?retryWrites=true&w=majority

# Cloudflare R2
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=savage-squad-images
R2_PUBLIC_URL=https://your-r2-domain.com

# Admin Login Credentials (Simple Auth)
ADMIN_EMAIL=admin@savagesquad.com
ADMIN_PASSWORD=YourSecurePassword123
SESSION_SECRET=random_secret_key_for_cookies
